@model IEnumerable<Status_narudzbe>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista statusa narudžbi</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="StatusNarudzbe" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> &nbsp; Kreiraj novi status narudžbe
            </a>
        </div>
    </div>
</div>
    <br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID statusa narudžbe
            </th>
            <th>
                Naziv statusa narudžbe
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td width="50%">
                @obj.Id
            </td>
            <td width="30%">
                @obj.naziv
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="StatusNarudzbe" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Uredi</a>
                </div>
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="StatusNarudzbe" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i> Obriši</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>