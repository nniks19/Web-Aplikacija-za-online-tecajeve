@model Status_narudzbe
@{
    ViewData["Title"] = "Uređivanje statusa narudžbe";
}
<form method="post" asp-action="Edit">
   <input hidden asp-for="Id" />
   <div class="border p-3 mt-4">
       <div class="row pb-2">
           <h2 class="text-primary">Uređivanje statusa narudžbi</h2>
           <hr />
       </div>

        <div class="mb-3">
            <label asp-for="naziv">Naziv statusa narudžbe</label>
            <input asp-for="naziv" class="form-control"/>
            <span asp-validation-for="naziv" class="text-danger"></span>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:150px">Ažuriraj status narudžbe</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="StatusNarudzbe" asp-action="Index" class="btn btn-secondary" style="width:150px">Povratak na popis statusa narudžbi</a>
            </div>
        </div>
   </div>

</form>

<section Scripts><partial name="_ValidationScriptsPartial" />
</section>
