@model Status_prijave
@{
    ViewData["Title"] = "Brisanje statusa prijave";
}
<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden/>
   <div class="border p-3 mt-4">
       <div class="row pb-2">
           <h2 class="text-primary">Brisanje statusa prijave</h2>
           <hr />
       </div>

        <div class="mb-3">
            <label asp-for="naziv">Naziv statusa prijava</label>
            <input asp-for="naziv" disabled class="form-control"/>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-danger">Obriši status prijave</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="StatusPrijave" asp-action="Index" class="btn btn-outline-secondary w-auto">Povratak na popis statusa prijava</a>
            </div>
        </div>
   </div>

</form>

<section Scripts><partial name="_ValidationScriptsPartial" />
</section>
