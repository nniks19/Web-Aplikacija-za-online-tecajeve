@model IEnumerable<Nacin_placanja>
@{
    ViewData["Title"] = "Prikaz načina plaćanja";
}
<partial name="_Notification" />
<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista načina plaćanja</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="NacinPlacanja" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> &nbsp; Kreiraj novi način plaćanja
            </a>
        </div>
    </div>
</div>
    <br />
<table class="table table-bordered table-striped" id="tblNacinPlacanja" style="width:100%">
    <thead>
        <tr>
            <th>
                ID načina plaćanja
            </th>
            <th>
                Naziv načina plaćanja
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section Scripts{
    <script src="~/js/nacinplacanja.js"></script>
}