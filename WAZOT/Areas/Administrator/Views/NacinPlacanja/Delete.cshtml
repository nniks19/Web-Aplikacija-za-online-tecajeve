@model Nacin_placanja

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden/>
   <div class="border p-3 mt-4">
       <div class="row pb-2">
           <h2 class="text-primary">Brisanje načina plaćanja</h2>
           <hr />
       </div>

        <div class="mb-3">
            <label asp-for="naziv">Naziv načina plaćanja</label>
            <input asp-for="naziv" disabled class="form-control"/>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-danger" style="width:150px">Obriši način plaćanja</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="NacinPlacanja" asp-action="Index" class="btn btn-secondary" style="width:150px">Povratak na popis načina plaćanja</a>
            </div>
        </div>
   </div>

</form>

<section Scripts><partial name="_ValidationScriptsPartial" />
</section>
