@model IEnumerable<Razina_Prava>
@{
    ViewData["Title"] = "Pregled razina prava";
}
<partial name="_Notification" />
<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista razine prava</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="RazinePrava" asp-action="Create" class="btn btn-outline-primary">
                <i class="fa fa-plus"></i> &nbsp; Kreiraj novu razinu prava 
            </a>
        </div>
    </div>
</div>
    <br />
<table id="tblRazinaPrava" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID razine prava
            </th>
            <th>
                Naziv razine prava
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section Scripts{
    <script src="~/js/razinaprava.js"></script>
}