@model WAZOT.Models.ViewModels.PrijavaNaTecajVM
@{
    ViewData["Title"] = "Brisanje prijave";
}
<form method="post" asp-action="DeletePOST">
    <input asp-for="PrijavaNaTecaj.Id" hidden/>
   <div class="border p-3 mt-4">
       <div class="row pb-2">
           <h2 class="text-primary">Brisanje prijave</h2>
           <hr />
       </div>
       <div class="mb-3">
            <label asp-for="PrijavaNaTecaj.Id">ID Prijave</label>
            <input type="text" asp-for="PrijavaNaTecaj.Id" class="form-control" disabled/>
            <span asp-validation-for="PrijavaNaTecaj.Id" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PrijavaNaTecaj.TecajId">Tečaj</label>
            <select asp-for="PrijavaNaTecaj.TecajId" asp-items="@Model.TecajList" class="form-select">
                <option disabled selected>--Odaberi tečaj--</option>
            </select>
            <span asp-validation-for="PrijavaNaTecaj.TecajId" class="text-danger"></span>
        </div>
       <div class="mb-3">
            <label asp-for="PrijavaNaTecaj.OsobaOib">Osoba</label>
            <select asp-for="PrijavaNaTecaj.OsobaOib" asp-items="@Model.OsobaList" class="form-select">
                <option disabled selected>--Odaberi osobu--</option>
            </select>
            <span asp-validation-for="PrijavaNaTecaj.OsobaOib" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PrijavaNaTecaj.Status_PrijaveId">Status prijave</label>
            <select asp-for="PrijavaNaTecaj.Status_PrijaveId" asp-items="@Model.StatusPrijavaList" class="form-select">
                <option disabled selected>--Odaberi status prijave--</option>
            </select>
            <span asp-validation-for="PrijavaNaTecaj.Status_PrijaveId" class="text-danger"></span>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-primary">Obriši prijavu</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="PrijavaNaTecaj" asp-action="Index" class="btn btn-outline-secondary w-auto">Povratak na popis prijava</a>
            </div>
        </div>
   </div>

</form>

<section Scripts><partial name="_ValidationScriptsPartial" />
</section>
