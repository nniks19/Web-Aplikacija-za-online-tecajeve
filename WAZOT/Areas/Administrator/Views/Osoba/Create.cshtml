@model WAZOT.Models.ViewModels.OsobaVM
@{
    ViewData["Title"] = "Kreiranje korisničkog računa";
}
<form method="post">
   <div class="border p-3 mt-4">
       <div class="row pb-2">
           <h2 class="text-primary">Kreiranje podataka o osobi</h2>
           <hr />
       </div>
        <div class="mb-3">
            <label asp-for="Osoba.Oib">Oib</label>
            <input asp-for="Osoba.Oib" class="form-control" pattern="[0-9]{11}" maxlength="11" title="Obavezan je unos 11 znamenki vašega OIB-a!" />
            <span asp-validation-for="Osoba.Oib" class="text-danger"></span>
            @ViewBag.msgOsobaPostoji
        </div>
        <div class="mb-3">
            <label asp-for="Osoba.ime">Ime</label>
            <input asp-for="Osoba.ime" class="form-control"/>
            <span asp-validation-for="Osoba.ime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Osoba.prezime">Prezime</label>
            <input asp-for="Osoba.prezime" class="form-control"/>
            <span asp-validation-for="Osoba.prezime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Osoba.Razina_PravaId">Razina prava</label>
            <select asp-for="Osoba.Razina_PravaId" asp-items="@Model.RazinaPravaList" class="form-select">
                <option disabled selected>--Odaberi razinu prava--</option>
            </select>
            <span asp-validation-for="Osoba.Razina_PravaId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Osoba.email">Email</label>
            <input asp-for="Osoba.email" class="form-control" type="email"/>
            <span asp-validation-for="Osoba.email" class="text-danger"></span>
            @ViewBag.msgEmailPostoji

        </div>
        <div class="mb-3">
            <label asp-for="Osoba.lozinka">Lozinka</label>
            <input asp-for="Osoba.lozinka" class="form-control"/>
            <span asp-validation-for="Osoba.lozinka" class="text-danger"></span>
        </div>
       <div class="mb-3">
            <label asp-for="Osoba.pin">PIN (4 znamenke)</label>
            <input asp-for="Osoba.pin" maxlength="4" pattern="^[0-9]{4}$" required class="form-control"/>
            <span asp-validation-for="Osoba.pin" class="text-danger"></span>
        </div>
       <div class="mb-3">
            <label asp-for="Osoba.odobreno">Ocjena</label>
            <select asp-for="Osoba.odobreno" class="form-select">
                <option disabled selected>--Odaberi status--</option>
                <option value="1">Odobri prijavu</option>
                <option value="0">Zaključaj račun</option>
            </select>
            <span asp-validation-for="Osoba.odobreno" class="text-danger"></span>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-primary">Kreiraj račun</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Osoba" asp-action="Index" class="btn btn-outline-secondary w-auto">Povratak na popis osoba</a>
            </div>
        </div>
   </div>

</form>

<section Scripts><partial name="_ValidationScriptsPartial" />
</section>
