@model WAZOT.Models.ViewModels.OcjenaTecajaVM

<form method="post">
    <input asp-for="Ocjena_tecaja.Id" hidden/>
   <div class="border p-3 mt-4">
       <div class="row pb-2">
           <h2 class="text-primary">Ocjenjivanje tečaja</h2>
           <hr />
       </div>
        <div class="mb-3">
            <label asp-for="Ocjena_tecaja.komentar">Komentar o tečaju</label>
            <input asp-for="Ocjena_tecaja.komentar" class="form-control"/>
            <span asp-validation-for="Ocjena_tecaja.komentar" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Ocjena_tecaja.ocjena">Ocjena</label>
            <select asp-for="Ocjena_tecaja.ocjena" class="form-select">
                <option disabled selected>--Odaberi ocjenu--</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Ocjena_tecaja.ocjena" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Ocjena_tecaja.OsobaOib">Komentar napisao</label>
            <select asp-for="Ocjena_tecaja.OsobaOib" asp-items="@Model.OsobaList" class="form-select">
                <option disabled selected>--Odaberi osobu--</option>
            </select>
            <span asp-validation-for="Ocjena_tecaja.OsobaOib" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Ocjena_tecaja.TecajId">Tečaj</label>
            <select asp-for="Ocjena_tecaja.TecajId" asp-items="@Model.TecajList" class="form-select">
                <option disabled selected value="">--Odaberi tečaj--</option>
            </select>
            <span asp-validation-for="Ocjena_tecaja.TecajId" class="text-danger"></span>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:150px">Ocijeni tečaj</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="OcjenaTecaja" asp-action="Index" class="btn btn-secondary" style="width:150px">Povratak na popis ocjena tečaja</a>
            </div>
        </div>
   </div>

</form>

<section Scripts><partial name="_ValidationScriptsPartial" />
</section>
