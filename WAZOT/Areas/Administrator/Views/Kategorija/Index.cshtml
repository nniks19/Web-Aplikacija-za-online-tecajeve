@model IEnumerable<Kategorija>
@{
    ViewData["Title"] = "Pregled kategorija";
}
<partial name="_Notification" />
<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista kategorija</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Kategorija" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> &nbsp; Kreiraj novu kategoriju
            </a>
        </div>
    </div>
</div>
    <br />
<table id="tblKategorija" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID kategorije
            </th>
            <th>
                Naziv kategorije
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section Scripts{
    <script src="~/js/kategorija.js"></script>
}