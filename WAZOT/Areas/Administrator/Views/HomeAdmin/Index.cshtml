@model WAZOT.Models.ViewModels.StatistikaVM

@{
    ViewData["Title"] = "Administratorsko sučelje";
}

<div class="container-fluid">
    <div class="row text-center">
        <div class="row text-center"><h1>Dobrodošli</h1></div>
        <div class="row text-center"><h3><b>@ViewBag.ime @ViewBag.prezime</h3></b> <h4>u administratorsko sučelje.</h4></div>
        <div class="row text-center"><h1>Statistika:</h1></div>
    </div>
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="row">
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div class="align-self-center">
                            <i class="fas fa-pencil-alt text-info fa-3x"></i>
                        </div>
                        <div class="text-end">
                            <h3 class="text-info">@Model.brTecaja</h3>
                            <p class="mb-0">Ukupan broj tečaja</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div class="align-self-center">
                            <i class="far fa-star text-warning fa-3x"></i>
                        </div>
                        <div class="text-end">
                            <h3 class="text-warning">@Model.brOcjenaTecaja</h3>
                            <p class="mb-0">Ukupan broj ocjena tečaja</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div class="align-self-center">
                            <i class="fas fa-credit-card text-success fa-3x"></i>
                        </div>
                        <div class="text-end">
                            <h3 class="text-success">@Model.brNacinaPlacanja</h3>
                            <p class="mb-0">Ukupan broj načina plaćanja</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div class="align-self-center">
                            <i class="fas fa-file-video text-danger fa-3x"></i>
                        </div>
                        <div class="text-end">
                            <h3 class="text-danger">@Model.brVideozapisa</h3>
                            <p class="mb-0">Ukupan broj videozapisa</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="row">
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div>
                            <h3 class="text-danger">@Model.brRazinePrava</h3>
                            <p class="mb-0">Ukupan broj razina prava</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-secret text-danger fa-3x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div>
                            <h3 class="text-success">@Model.brOsoba</h3>
                            <p class="mb-0">Broj osoba</p>
                        </div>
                        <div class="align-self-center">
                            <i class="far fa-user text-success fa-3x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div>
                            <h3 class="text-warning">@Model.brNarudzbi</h3>
                            <p class="mb-0">Ukupan broj narudžbi</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-shopping-cart text-warning fa-3x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div>
                            <h3 class="text-info">@Model.brStatusaNarudzbi</h3>
                            <p class="mb-0">Ukupan broj statusa narudžbi</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-info-circle text-info fa-3x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="row">
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div class="align-self-center">
                            <i class="fas fa-list-alt text-info fa-3x"></i>
                        </div>
                        <div class="text-end">
                            <h3 class="text-info">@Model.brKategorija</h3>
                            <p class="mb-0">Ukupan broj kategorija</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
</div>
