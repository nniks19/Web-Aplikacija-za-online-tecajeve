@model WAZOT.Models.Osoba
@ViewBag.msgaaa
<form method="post">
   <div class="border p-3 mt-4">
       <div class="row pb-2">
           <h2 class="text-primary">Prijava</h2>
           <hr />
       </div>
        <div class="mb-3">
            <label asp-for="email">Email</label>
            <input asp-for="email" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="lozinka">Lozinka</label>
            <input asp-for="lozinka" type="password" class="form-control"/>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:150px">Prijavi se</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Login" asp-action="Index" class="btn btn-secondary" style="width:150px">Povratak na odabir vrste prijave</a>
            </div>
        </div>
   </div>

</form>

<section Scripts><partial name="_ValidationScriptsPartial" />
</section>
@section Scripts{
    <script src="~/js/osoba.js"></script>
}