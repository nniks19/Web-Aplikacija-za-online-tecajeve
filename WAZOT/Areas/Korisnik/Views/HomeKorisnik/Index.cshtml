@model WAZOT.Models.ViewModels.StatistikaKorisnikaVM

@{
    ViewData["Title"] = "Korisničko sučelje";
}

<div class="container-fluid">
    <div class="row text-center">
        <div class="row text-center"><h1>Dobrodošli</h1></div>
        <div class="row text-center"><h3><b>@ViewBag.ime @ViewBag.prezime</h3></b> <h4>u korisničko sučelje.</h4></div>
        <div class="row text-center"><h1>Statistika:</h1></div>
    </div>
    <div class="progress mb-4">
        <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div class="align-self-center">
                            <i class="fas fa-pencil-alt text-info fa-3x"></i>
                        </div>
                        <div class="text-end">
                            <h3 class="text-info">@Model.brTecaja</h3>
                            <p class="mb-0">Ukupan broj tečaja</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div class="align-self-center">
                            <i class="far fa-star text-warning fa-3x"></i>
                        </div>
                        <div class="text-end">
                            <h3 class="text-warning">@Model.brOcjenaTecaja</h3>
                            <p class="mb-0">Ukupan broj ocjena tečaja</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between px-md-1">
                        <div class="align-self-center">
                            <i class="fas fa-credit-card text-success fa-3x"></i>
                        </div>
                        <div class="text-end">
                            <h3 class="text-success">@Model.brPrijava</h3>
                            <p class="mb-0">Ukupan broj prijava</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
</div>
