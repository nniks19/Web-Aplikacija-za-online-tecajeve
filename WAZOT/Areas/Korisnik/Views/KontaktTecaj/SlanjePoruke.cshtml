@model WAZOT.Models.ViewModels.PorukaVM
@{
	ViewData["Title"] = "Kontakt";
}

<div class="container">
	<form method="post" enctype="multipart/form-data">
		<input asp-for="@Model.Razgovor.PrimateljOsobaOib" hidden />
		<input asp-for="@Model.Razgovor.PosiljateljOsobaOib" hidden/>
		<input asp-for="@Model.Poruka.PosiljateljOsobaOib" hidden/>
	<div class="row">
		<div class="col-12">
			<h2 class="mt-4 mb-4 text-center">Kontaktiranje kreatora tečaja</h2>
		</div>
		<div class="progress">
			<div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Razgovor.PrimateljOsobaOib">OIB Kreatora</label>
			<input asp-for="@Model.Razgovor.PrimateljOsobaOib" class="form-control" disabled />
		</div>
		<div class="progress">
			<div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Razgovor.PosiljateljOsobaOib">Vaš OIB</label>
			<input asp-for="@Model.Razgovor.PosiljateljOsobaOib" class="form-control" disabled />
		</div>
		<div class="progress">
			<div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
		</div>
		<div class="form-group">
			<label for="exampleTextarea" class="form-label mt-4">Poruka</label>
			<textarea required class="form-control" asp-for="@Model.Poruka.Tekst" rows="3"></textarea>
		</div>
		<div class="progress">
			<div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
		</div>
		<div class="row pt-4">
			<div class="col-6">
				<button type="submit" class="btn btn-outline-primary">Kreiraj prijavu</button>
			</div>
			<div class="col-6 text-end">
				<a class="btn btn-lg btn-outline-secondary" type="button" value="Back" onclick="window.history.back()">Povratak na tečaj</a>
			</div>
		</div>
	</div>
	</form>
</div>