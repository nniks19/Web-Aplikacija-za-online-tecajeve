@model WAZOT.Models.ViewModels.NarudzbaVM
@{
    ViewData["Title"] = "Kreiranje narudžbe";
}
<form method="post">
    <input hidden asp-for="Narudzba.OsobaOib" />
    <input hidden asp-for="Narudzba.TecajId" />
    <input hidden asp-for="Narudzba.Status_NarudzbeId" />
    <div class="border p-3 mt-4">
        @ViewBag.notfilled
        <div class="row pb-2">
            <h2 class="text-primary">Kreiranje narudžbe</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Narudzba.Nacin_PlacanjaId">Način plaćanja</label>
            <select asp-for="Narudzba.Nacin_PlacanjaId" asp-items="@Model.NacinPlacanjaList" class="form-select">
                <option disabled selected>--Odaberi način plaćanja--</option>
            </select>
            <span asp-validation-for="Narudzba.Nacin_PlacanjaId" class="text-danger"></span>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-primary">Kreiraj narudžbu</button>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-lg btn-outline-secondary" type="button" asp-controller="TecajPrijava" asp-action="Index">Povratak na popis tečaja</a>
            </div>
        </div>
    </div>

</form>

<section Scripts>
    <partial name="_ValidationScriptsPartial" />
</section>
